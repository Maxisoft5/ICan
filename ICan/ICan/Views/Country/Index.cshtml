@model IEnumerable<ICan.Common.Models.Opt.CountryModel>

@{ ViewData["Title"] = "Список стран"; }

<h2>@ViewData["Title"] </h2>
<p>
	<a asp-action="Create">Создать</a>
</p>
<span class="text-success">@TempData["StatusMessage"]</span>
<span class="alert-danger">@TempData["ErrorMessage"]</span>
<table class="table">
	<thead>
		<tr>
			<th style="max-width:200px">
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Prefix)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Prefix)
				</td>

				<td>
					<a asp-action="Edit" asp-route-id="@item.CountryId"><i class="far fa-edit"></i></a> |
					<form asp-action="Delete" style="display: inline" asp-route-id="@item.CountryId">
						<i class="submit index far fa-times-circle" style="color:rgb(0, 123, 255)"></i>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>
