@model IEnumerable<ICan.Common.Models.Opt.ProductpriceModel>

@{ 
	var title = "Архив цен. " + ViewData["ProductTitle"];
	ViewData["Title"] = title;
}

<h2>@title</h2>

<span class="text-success">@TempData["StatusMessage"]</span>
<span class="alert-danger">@TempData["ErrorMessage"]</span>

<table class="table">
	<thead>
		<tr>
			<th style="max-width:200px">
				@Html.DisplayNameFor(model => model.Price)
			</th>
			<th style="max-width:200px">
				@Html.DisplayNameFor(model => model.DateStart)
			</th>

			<th style="max-width:220px">
				@Html.DisplayNameFor(model => model.DateEnd)
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Price)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DateStart)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DateEnd)
				</td>
			</tr>
		}
	</tbody>
</table>
