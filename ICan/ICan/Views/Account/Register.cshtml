@model RegisterViewModel
@{
	ViewData["Title"] = "Регистрация";
	bool.TryParse(ViewData["UseCaptcha"]?.ToString(), out var useCaptcha);
}
<br />
<h4>@ViewData["Title"]</h4>

<hr />

<form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" style="    width: 100%;">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="row">

		<div class="col-md-5">
			<div class="form-group">
				<label asp-for="FirstName"></label>
				<sup><i class="fas fa-asterisk" style="font-size: 10px; color: red"></i></sup>
				<input asp-for="FirstName" class="form-control" />
				<span asp-validation-for="FirstName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="LastName"></label>
				<sup><i class="fas fa-asterisk" style="font-size: 10px; color: red"></i></sup>
				<input asp-for="LastName" class="form-control" />
				<span asp-validation-for="LastName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Phone"></label>
				<sup><i class="fas fa-asterisk" style="font-size: 10px; color: red"></i></sup>
				<input asp-for="Phone" class="form-control" />
				<span asp-validation-for="Phone" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Email"></label>
				<sup><i class="fas fa-asterisk" style="font-size: 10px; color: red"></i></sup>
				<input asp-for="Email" class="form-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Password"></label>
				<sup><i class="fas fa-asterisk" style="font-size: 10px; color: red"></i></sup>
				<input asp-for="Password" class="form-control" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ConfirmPassword"></label>
				<sup><i class="fas fa-asterisk" style="font-size: 10px; color: red"></i></sup>
				<input asp-for="ConfirmPassword" class="form-control" />
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>
			@if (useCaptcha)
			{
				<div class="form-group">
					<div class="g-recaptcha" data-sitekey="@ViewData["Public"]"></div>
				</div>
			}
		</div>
	</div>
	<div class="row">
		<button type="submit" class="btn btn-default" style="margin-left: 15px;">Зарегистрироваться</button>
	</div>

	<div class="form-group" style="margin-top:20px;">
		<p>
			<a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">Войти</a>
		</p>
	</div>
</form>



@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
}
