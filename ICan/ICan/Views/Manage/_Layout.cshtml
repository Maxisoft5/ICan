@{
    Layout = "/Views/Shared/_Layout.cshtml";
    bool.TryParse(ViewData["IsCurrentUser"]?.ToString(), out bool isCurrentUser);
}
@if (isCurrentUser)
{
    <h2>Управление учётной записью</h2>

    <div>
        <div class="row">

            <div class="col-md-3">
                @await Html.PartialAsync("_ManageNav")
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>
}
else
{
    @RenderBody()
}


@section Scripts {
    @RenderSection("Scripts", required: false)
}

