@model ICan.Common.Models.Opt.DownloadReportModel

<form asp-action="DownloadReport" data-ajax="true" class="download-form toggle-hide">
		
	<div class="form-group">
		<label asp-for="FromMonth" class="control-label"></label>
		<sup><i class="fas fa-asterisk" style="font-size: 10px; color: red"></i></sup>
		@Html.DropDownListFor(t=>t.FromMonth, (IEnumerable<SelectListItem>)ViewData["Months"],
		   null, new { style="min-width:300px"}));

		<span asp-validation-for="FromMonth" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="FromYear" class="control-label"></label>
		<sup><i class="fas fa-asterisk" style="font-size: 10px; color: red"></i></sup>
		@Html.DropDownListFor(t=>t.FromYear, (IEnumerable<SelectListItem>)ViewData["Years"],
			   null, new { style="min-width:300px"}));


		<span asp-validation-for="FromYear" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="ToMonth" class="control-label"></label>
		<sup><i class="fas fa-asterisk" style="font-size: 10px; color: red"></i></sup>
		@Html.DropDownListFor(t=>t.ToMonth, (IEnumerable<SelectListItem>)ViewData["Months"],
		   null, new { style="min-width:300px"}));

		<span asp-validation-for="ToMonth" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="ToYear" class="control-label"></label>
		<sup><i class="fas fa-asterisk" style="font-size: 10px; color: red"></i></sup>
		@Html.DropDownListFor(t=>t.FromYear, (IEnumerable<SelectListItem>)ViewData["Years"],
			   null, new { style="min-width:300px"}));

		<span asp-validation-for="ToYear" class="text-danger"></span>
	</div>
</form>
